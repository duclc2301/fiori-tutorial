<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="editProductDialog"
        title="Edit Product"
        beforeOpen="onBeforeEditProduct"
        afterClose="onAfterCloseDialog"
        contentWidth="400px"
    >
        <content>
            <f:SimpleForm
                id="editProductForm"
                editable="true"
            >
                <f:content>
                    <Label text="ID" />
                    <Input
                        required="true"
                        value="{form>Employeeid}"
                        editable="false"
                    />
                    <Label text="Full Name" />
                    <Input
                        required="true"
                        value="{form>Fullname}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Gender" />
                    <Input
                        required="true"
                        value="{form>Gender}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="StartDate" />
                    <Input
                        required="true"
                        value="{form>StartDate}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Contracttype" />
                    <Input
                        required="true"
                        value="{form>Contracttype}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Birthdate" />
                    <Input
                        required="true"
                        value="{form>Birthdate}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Address" />
                    <Input
                        required="true"
                        value="{form>Address}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Phone" />
                    <Input
                        required="true"
                        value="{form>Phone}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Plans" />
                    <Input
                        required="true"
                        value="{form>Plans}"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                    />
                    <Label text="Salary" />
                    <Input
                        required="true"
                        value="{
                           parts: [
                                'form>Salary',
                                'view>/currency'
                            ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: false,
                                decimalSeparator: ',',
                                groupingSeparator: '.'
                            }
                        }"
                        change="onChangeValue"
                        fieldGroupIds="FormField"
                        description="VND"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                icon="sap-icon://save"
                press="onEditProduct"
            />
        </beginButton>
        <endButton>
            <Button
                text="Close"
                press="onCloseEditProduct"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
